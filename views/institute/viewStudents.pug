extends _instituteBase
block content 
    div(style="margin:30px;margin-bottom:200px;")
        h2(style="text-align:center;color:green;") Please provide below details
        div(style="padding:20px;width:max-content;height:max-content;margin:auto;box-shadow: 1px 5px 6px -2px #777;background-color: #f8f8ff;")
            label(for="cls") Select Class
            select#cls
                option(id='0' value='Select' selected) Select
                - for (c of institute.parsedClass)
                    - let cls = Object.keys(c).join('')
                    - let sec = c[cls]
                    option(id=cls name=c  value=c)=cls 
            br
            br
            label(for="section" style="display:none;") Select section
            select#section(style="display:none;")
            input(type="button" id='submit' style="display:none;width:80px;margin-right:30px;" value="Submit")
            input(type="button" id='clear' style="display:none;width:70px;" value="Clear")

        #result(style="margin:auto;margin-top:50px;width:75%;")
            
        