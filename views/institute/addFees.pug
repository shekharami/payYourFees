extends ./_instituteBase
block content
    div
        //- div(style="width:min-content;display:flex;margin:50px;") 
            table 
                tr 
                    th Month  
                    th Weight
                tr 
                    td JAN 
                    td 1
                tr 
                    td FEB 
                    td 2
                tr 
                    td MAR 
                    td 3
                tr 
                    td APR 
                    td 4
                tr 
                    td MAY
                    td 5
                tr 
                    td JUN  
                    td 6
                tr 
