.header
  
    header
      - if(user || institite)
        ul(style="background-color:#333;")
            li
                a(style="color:white;" href='/dashboard' class=`${header==='home'?'active':''}`) Home
            li
                a(href='/notifications' style="color:white;" class=`${header==='notifications'?'active':''}`) Notifications
            li
                a(href='/history' style="color:white;" class=`${header==='history'?'active':''}`) History
            li
            li(style='float:right')
                a(href='/logout' style="color:white;") Logout
            li(style='float:right')
                a(href='/cart' style="color:white;" class=`${header==='cart'?'active':''}`)=`Cart ${cartCount>=0 ? ('( '+cartCount+' )') : ''}`
